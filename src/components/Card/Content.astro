---
interface Props {
  title?: string;
  body?: string;
}

const { title, body } = Astro.props;
---

<div class="card-content">
  {title && <h3 class="card-title">{title}</h3>}
  {body && <p class="card-body">{body}</p>}
  <slot />
</div>

<style>
  .card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    position: relative;
    z-index: 2;
  }
  
  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #e6edf3;
    line-height: 1.3;
    margin-bottom: 0.25rem;
  }
  
  .card-body {
    color: #8b949e;
    font-size: 0.95rem;
    line-height: 1.5;
  }
  
  @media (max-width: 640px) {
    .card-title {
      font-size: 1.1rem;
    }
    
    .card-body {
      font-size: 0.85rem;
    }
  }
</style>
