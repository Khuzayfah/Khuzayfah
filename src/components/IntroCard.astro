---
import Card from "./Card/index.astro";
import Button from "./Button.astro";
import { LINKS } from "../lib/constants";
import { Icon } from 'astro-icon/components'
import Tooltip from "./Tooltip/index";
import { Image } from "astro:assets";
---

<Card colSpan="md:col-span-3" rowSpan="md:row-span-2" variant="gradient">
  <div class="flex w-full h-full">
    <div class="flex flex-col justify-between md:max-w-[480px] gap-4">
      <div class="flex flex-col gap-2">
        <h6 class="text-xs sm:text-sm text-gray-300">Welcome to my personal portfolio</h6>
        <h1 class="text-xl sm:text-2xl font-bold relative inline-block tech-name">
          Khuzayfah Redo
        </h1>
        <h2 class="text-lg sm:text-xl font-bold flex items-center">
          <span class="text-gradient">SEO & Digital Marketing Professional</span>
          <div class="digital-badge ml-3">
            <span class="text-xs">Since 2010</span>
          </div>
        </h2>
        <p class="text-sm sm:text-base text-gray-300 leading-relaxed">
          Polytechnic graduate in Software Engineering with specialized certifications in RedHat, Data Science, and AI. Combining technical expertise with marketing knowledge to deliver comprehensive digital solutions.
        </p>
      </div>
      <div class="tech-stats-container">
        <div class="tech-stat">
          <div class="tech-stat-icon">
            <Icon name="ri:graduation-cap-fill" class="h-4 w-4 text-red-500" />
          </div>
          <div class="tech-stat-content">
            <div class="tech-stat-value">Poly</div>
            <div class="tech-stat-label">Software Engineering</div>
          </div>
        </div>
        <div class="tech-stat">
          <div class="tech-stat-icon">
            <Icon name="ri:user-search-fill" class="h-4 w-4 text-red-500" />
          </div>
          <div class="tech-stat-content">
            <div class="tech-stat-value">13+</div>
            <div class="tech-stat-label">Years Experience</div>
          </div>
        </div>
        <div class="tech-stat">
          <div class="tech-stat-icon">
            <Icon name="ri:award-fill" class="h-4 w-4 text-red-500" />
          </div>
          <div class="tech-stat-content">
            <div class="tech-stat-value">Multi</div>
            <div class="tech-stat-label">Certifications</div>
          </div>
        </div>
      </div>
      <div class="flex gap-4">
        <a href="mailto:khuzayfah.redo@gmail.com" rel="noopener noreferrer">
          <Button>Contact Me</Button>
        </a>
      </div>
    </div>
  </div>
</Card>

<style>
  .tech-name {
    background: linear-gradient(90deg, #e53e3e, #f8f9fa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
    display: inline-block;
  }
  
  .tech-name::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 40%;
    height: 2px;
    background: linear-gradient(90deg, #e53e3e, transparent);
  }

  .digital-badge {
    background-color: rgba(229, 62, 62, 0.8);
    padding: 4px 8px;
    border-radius: 4px;
    color: white;
    position: relative;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }

  .digital-badge::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: rgba(255, 255, 255, 0.5);
  }

  .tech-stats-container {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 8px;
  }

  .tech-stat {
    flex: 1;
    min-width: 80px;
    display: flex;
    align-items: center;
    background-color: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(229, 62, 62, 0.15);
    border-radius: 8px;
    padding: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
  }

  .tech-stat::after {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    width: 30%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(229, 62, 62, 0.3));
  }

  .tech-stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 6px;
    margin-right: 10px;
    border: 1px solid rgba(229, 62, 62, 0.2);
  }

  .tech-stat-content {
    display: flex;
    flex-direction: column;
  }

  .tech-stat-value {
    font-weight: bold;
    font-size: 0.95rem;
    color: #f8f9fa;
  }

  .tech-stat-label {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.6);
  }

  @media (max-width: 640px) {
    .tech-stats-container {
      gap: 8px;
    }

    .tech-stat {
      padding: 8px;
      min-width: 70px;
    }

    .tech-stat-icon {
      width: 24px;
      height: 24px;
    }

    .tech-stat-value {
      font-size: 0.85rem;
    }

    .tech-stat-label {
      font-size: 0.65rem;
    }
  }
</style>
