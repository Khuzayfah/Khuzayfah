---
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card/index.astro";
import { Icon } from "astro-icon/components";
import Nav from "../components/Nav.astro";
import Chatbot from "../components/Chatbot.astro";

// Component Imports
import CardHover from "../components/Card/CardHover.astro";

// Import data
import { services, skills, techBrands, quotes, bio, projects } from "../data";
---

<BaseLayout>
  <!-- Preconnect untuk meningkatkan kecepatan loading -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link rel="dns-prefetch" href="https://www.facebook.com" />
  <link rel="dns-prefetch" href="https://wa.me" />
  <link rel="dns-prefetch" href="https://singrank.com" />
  
  <div class="terminal-window">
    <!-- Terminal Header -->
    <div class="terminal-header">
      <div class="terminal-buttons">
        <span class="terminal-button close"></span>
        <span class="terminal-button minimize"></span>
        <span class="terminal-button maximize"></span>
      </div>
      <div class="terminal-title">~/developer_portfolio</div>
      <div class="terminal-actions">
        <Icon name="ri:more-fill" class="w-5 h-5" />
      </div>
    </div>
    
    <!-- Terminal Content -->
    <div class="terminal-content">
      <div class="terminal-navbar">
        <div class="terminal-prompt">
          <span class="terminal-prompt-user">guest</span>
          <span class="terminal-prompt-separator">@</span>
          <span class="terminal-prompt-host">digital-portfolio</span>
          <span class="terminal-prompt-path">:~$</span>
          <span class="terminal-prompt-command">ls -la sections/</span>
        </div>
        <nav class="terminal-nav-links">
          <a href="#about" class="terminal-nav-link">About</a>
          <a href="#services" class="terminal-nav-link">Services</a>
          <a href="#skills" class="terminal-nav-link">Skills</a>
          <a href="#projects" class="terminal-nav-link">Projects</a>
          <a href="#contact" class="terminal-nav-link">Contact</a>
        </nav>
      </div>
      
      <div class="terminal-output">
        <div class="terminal-loading">
          <div class="terminal-loading-bar"></div>
          <span class="terminal-loading-text">Initializing portfolio components...</span>
        </div>
        
        <!-- Main Content -->
        <main class="terminal-main-grid">
          <!-- About Section -->
          <section id="about" class="terminal-section">
            <div class="terminal-section-header">
              <div class="terminal-prompt-mini">
                <span class="terminal-prompt-user">guest</span>
                <span class="terminal-prompt-separator">@</span>
                <span class="terminal-prompt-host">digital-portfolio</span>
                <span class="terminal-prompt-path">:~$</span>
                <span class="terminal-prompt-command">cat about.md</span>
              </div>
            </div>
            
            <div class="terminal-section-content">
              <Card
                colSpan="md:col-span-2"
                title="About Me"
                body={bio}
                variant="glass"
              />
            </div>
          </section>
          
          <!-- Services Section -->
          <section id="services" class="terminal-section">
            <div class="terminal-section-header">
              <div class="terminal-prompt-mini">
                <span class="terminal-prompt-user">guest</span>
                <span class="terminal-prompt-separator">@</span>
                <span class="terminal-prompt-host">digital-portfolio</span>
                <span class="terminal-prompt-path">:~$</span>
                <span class="terminal-prompt-command">ls -la services/</span>
              </div>
              <div class="terminal-section-title">
                <h2>Services</h2>
                <div class="terminal-section-line"></div>
              </div>
            </div>
            
            <div class="terminal-section-content">
              <div class="terminal-service-grid">
                {
                  services.map((service) => (
                    <div class="terminal-service-item">
                      <div class="terminal-service-icon">
                        <Icon name={service.icon} />
                      </div>
                      <h3 class="terminal-service-title">{service.title}</h3>
                      <p class="terminal-service-description">{service.description}</p>
                    </div>
                  ))
                }
              </div>
            </div>
          </section>
          
          <!-- Skills Section -->
          <section id="skills" class="terminal-section">
            <div class="terminal-section-header">
              <div class="terminal-prompt-mini">
                <span class="terminal-prompt-user">guest</span>
                <span class="terminal-prompt-separator">@</span>
                <span class="terminal-prompt-host">digital-portfolio</span>
                <span class="terminal-prompt-path">:~$</span>
                <span class="terminal-prompt-command">ls -la skills/</span>
              </div>
              <div class="terminal-section-title">
                <h2>Skills & Technologies</h2>
                <div class="terminal-section-line"></div>
              </div>
            </div>
            
            <div class="terminal-section-content">
              <div class="terminal-tech-grid">
                {
                  techBrands.map((brand, index) => (
                    <div class="terminal-tech-item" style={`--animation-delay: ${index * 100}ms`}>
                      <div class="terminal-tech-logo">
                        <div class="terminal-tech-logo-glow"></div>
                        <Icon name={brand.icon} />
                      </div>
                      <span class="terminal-tech-name">{brand.name}</span>
                    </div>
                  ))
                }
              </div>
              
              <div class="terminal-skills-grid">
                {
                  skills.map((category, categoryIndex) => (
                    <div class="terminal-skill-category" style={`--animation-delay: ${categoryIndex * 150}ms`}>
                      <h3 class="terminal-skill-category-title">{category.category}</h3>
                      <ul class="terminal-skill-list">
                        {category.skills.map((skill, skillIndex) => (
                          <li class="terminal-skill-item" style={`--animation-delay: ${skillIndex * 50 + 200}ms`}>
                            <span class="terminal-skill-bullet">></span>
                            {skill}
                          </li>
                        ))}
                      </ul>
                    </div>
                  ))
                }
              </div>
            </div>
          </section>
          
          <!-- Projects Section -->
          <section id="projects" class="terminal-section">
            <div class="terminal-section-header">
              <div class="terminal-prompt-mini">
                <span class="terminal-prompt-user">guest</span>
                <span class="terminal-prompt-separator">@</span>
                <span class="terminal-prompt-host">digital-portfolio</span>
                <span class="terminal-prompt-path">:~$</span>
                <span class="terminal-prompt-command">ls -la projects/</span>
              </div>
              <div class="terminal-section-title">
                <h2>Projects</h2>
                <div class="terminal-section-line"></div>
              </div>
            </div>
            
            <div class="terminal-section-content">
              <div class="terminal-projects-grid">
                {
                  projects.map((project) => (
                    <Card
                      colSpan={project.colSpan}
                      title={project.title}
                      body={project.body}
                      href={project.href}
                      variant={project.variant}
                    />
                  ))
                }
              </div>
            </div>
          </section>
          
          <!-- Quote Section -->
          <section id="quote" class="terminal-section">
            <div class="terminal-section-header">
              <div class="terminal-prompt-mini">
                <span class="terminal-prompt-user">guest</span>
                <span class="terminal-prompt-separator">@</span>
                <span class="terminal-prompt-host">digital-portfolio</span>
                <span class="terminal-prompt-path">:~$</span>
                <span class="terminal-prompt-command">cat quote.txt</span>
              </div>
            </div>
            
            <div class="terminal-section-content">
              <div class="terminal-quote-container">
                <div class="terminal-quote-icon">
                  <Icon name="ri:double-quotes-l" />
                </div>
                <blockquote class="terminal-quote-text">
                  {quotes[0].quote}
                </blockquote>
                <div class="terminal-quote-author">
                  <span class="terminal-quote-author-name">{quotes[0].author}</span>
                  <span class="terminal-quote-author-title">{quotes[0].title}</span>
                </div>
              </div>
            </div>
          </section>
          
          <!-- Contact Section -->
          <section id="contact" class="terminal-section">
            <div class="terminal-section-header">
              <div class="terminal-prompt-mini">
                <span class="terminal-prompt-user">guest</span>
                <span class="terminal-prompt-separator">@</span>
                <span class="terminal-prompt-host">digital-portfolio</span>
                <span class="terminal-prompt-path">:~$</span>
                <span class="terminal-prompt-command">contact --show</span>
              </div>
              <div class="terminal-section-title">
                <h2>Contact</h2>
                <div class="terminal-section-line"></div>
              </div>
            </div>
            
            <div class="terminal-section-content">
              <div class="terminal-contact-container">
                <Card
                  colSpan="md:col-span-2"
                  title="Get In Touch"
                  body="Hubungi saya melalui email, Facebook, atau WhatsApp untuk diskusi proyek SEO dan Digital Marketing."
                  variant="glass"
                >
                  <div class="terminal-contact-links">
                    <a href="mailto:singranksg@gmail.com" class="terminal-contact-link">
                      <Icon name="ri:mail-line" />
                      <span>Email</span>
                    </a>
                    <a href="https://www.facebook.com/Khuzayfah.by.redo" class="terminal-contact-link" target="_blank" rel="noopener noreferrer">
                      <Icon name="ri:facebook-fill" />
                      <span>Facebook</span>
                    </a>
                    <a href="https://wa.me/6282377660027" class="terminal-contact-link" target="_blank" rel="noopener noreferrer">
                      <Icon name="ri:whatsapp-line" />
                      <span>WhatsApp</span>
                    </a>
                    <a href="https://singrank.com" class="terminal-contact-link" target="_blank" rel="noopener noreferrer">
                      <Icon name="ri:global-line" />
                      <span>Website</span>
                    </a>
                  </div>
                </Card>
              </div>
            </div>
          </section>
        </main>
      </div>
    </div>
    
    <!-- Terminal Footer -->
    <footer class="terminal-footer">
      <div class="terminal-footer-prompt">
        <span class="terminal-prompt-user">guest</span>
        <span class="terminal-prompt-separator">@</span>
        <span class="terminal-prompt-host">digital-portfolio</span>
        <span class="terminal-prompt-path">:~$</span>
        <span class="terminal-prompt-cursor"></span>
      </div>
      <div class="terminal-footer-info">
        <span>© 2025 • Developed with Astro oleh Khuzayfah Redo</span>
      </div>
    </footer>
  </div>
  
  <!-- Chatbot -->
  <!-- 
  <Chatbot />
  -->
</BaseLayout>

<style>
  /* Terminal Window */
  .terminal-window {
    --terminal-bg: rgba(16, 16, 18, 0.97);
    --terminal-header: #1a1a1c;
    --terminal-text: #f0f0f0;
    --terminal-accent: rgb(235, 68, 68);
    --terminal-accent-alpha: rgba(235, 68, 68, 0.6);
    --terminal-border: rgba(255, 255, 255, 0.12);
    
    max-width: 1300px;
    margin: 1rem auto;
    background-color: var(--terminal-bg);
    border-radius: 10px;
    border: 1px solid var(--terminal-border);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: calc(100vh - 2rem);
    contain: content; /* Meningkatkan performa render */
  }
  
  @media (max-width: 768px) {
    .terminal-window {
      margin: 0;
      height: 100vh;
      border-radius: 0;
      border-left: none;
      border-right: none;
    }
  }
  
  /* Terminal Header */
  .terminal-header {
    background-color: var(--terminal-header);
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid var(--terminal-border);
  }
  
  .terminal-buttons {
    display: flex;
    gap: 8px;
  }
  
  .terminal-button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    display: inline-block;
  }
  
  .terminal-button.close {
    background-color: #ff5f56;
  }
  
  .terminal-button.minimize {
    background-color: #ffbd2e;
  }
  
  .terminal-button.maximize {
    background-color: #27c93f;
  }
  
  .terminal-title {
    font-family: monospace;
    font-size: 0.9rem;
    color: var(--terminal-text);
    opacity: 0.8;
  }
  
  .terminal-actions {
    color: var(--terminal-text);
    opacity: 0.5;
  }
  
  /* Terminal Content */
  .terminal-content {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
    scroll-behavior: smooth;
  }
  
  @media (max-width: 768px) {
    .terminal-content {
      padding: 1rem 0.75rem;
    }
  }
  
  /* Terminal Navbar */
  .terminal-navbar {
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--terminal-border);
    padding-bottom: 1rem;
  }
  
  @media (max-width: 768px) {
    .terminal-navbar {
      margin-bottom: 1.5rem;
      padding-bottom: 0.75rem;
    }
    
    .terminal-prompt {
      font-size: 0.8rem;
    }
    
    .terminal-nav-links {
      gap: 0.5rem;
      overflow-x: auto;
      padding-bottom: 0.5rem;
      -webkit-overflow-scrolling: touch;
      white-space: nowrap;
      display: flex;
      flex-wrap: nowrap;
    }
    
    .terminal-nav-link {
      flex-shrink: 0;
      padding: 0.25rem 0.5rem;
      font-size: 0.8rem;
    }
  }
  
  .terminal-prompt {
    font-family: monospace;
    font-size: 0.9rem;
    color: var(--terminal-text);
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }
  
  .terminal-prompt-user {
    color: #4CAF50;
  }
  
  .terminal-prompt-separator {
    color: var(--terminal-text);
    margin: 0 0.25rem;
  }
  
  .terminal-prompt-host {
    color: #2196F3;
  }
  
  .terminal-prompt-path {
    color: var(--terminal-text);
    margin-right: 0.5rem;
  }
  
  .terminal-prompt-command {
    color: var(--terminal-accent);
  }
  
  .terminal-nav-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 0.5rem;
  }
  
  .terminal-nav-link {
    font-family: monospace;
    color: var(--terminal-text);
    text-decoration: none;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    transition: all 0.2s ease;
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--terminal-border);
  }
  
  .terminal-nav-link:hover {
    background-color: var(--terminal-accent-alpha);
    color: white;
    transform: translateY(-2px);
  }
  
  /* Terminal Loading */
  .terminal-loading {
    margin-bottom: 1.5rem;
  }
  
  .terminal-loading-bar {
    height: 4px;
    width: 50%;
    background: linear-gradient(90deg, var(--terminal-accent) 0%, var(--terminal-accent-alpha) 70%, transparent 100%);
    border-radius: 2px;
    margin-bottom: 0.5rem;
    animation: loading 2s ease-in-out forwards;
  }
  
  @keyframes loading {
    0% { width: 0%; opacity: 1; }
    70% { width: 70%; opacity: 1; }
    100% { width: 100%; opacity: 0.3; }
  }
  
  .terminal-loading-text {
    font-family: monospace;
    font-size: 0.85rem;
    color: var(--terminal-text);
    opacity: 0.7;
  }
  
  /* Terminal Main Grid */
  .terminal-main-grid {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }
  
  /* Terminal Section */
  .terminal-section {
    margin-bottom: 2rem;
  }
  
  .terminal-section-header {
    margin-bottom: 1rem;
  }
  
  .terminal-prompt-mini {
    font-family: monospace;
    font-size: 0.8rem;
    color: var(--terminal-text);
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }
  
  .terminal-section-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 1rem 0;
  }
  
  .terminal-section-title h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--terminal-text);
    margin: 0;
  }
  
  .terminal-section-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, var(--terminal-accent-alpha), transparent);
  }
  
  /* Service Grid */
  .terminal-service-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.25rem;
  }
  
  @media (min-width: 640px) {
    .terminal-service-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .terminal-service-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
  }
  
  .terminal-service-item {
    background-color: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--terminal-border);
    border-radius: 8px;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }
  
  .terminal-service-item:hover {
    transform: translateY(-5px);
    border-color: var(--terminal-accent-alpha);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }
  
  .terminal-service-icon {
    width: 3rem;
    height: 3rem;
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    color: var(--terminal-accent);
    font-size: 1.5rem;
    border: 1px solid var(--terminal-border);
    transition: all 0.3s ease;
  }
  
  .terminal-service-item:hover .terminal-service-icon {
    background-color: var(--terminal-accent-alpha);
    color: white;
  }
  
  .terminal-service-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--terminal-text);
    margin-bottom: 0.75rem;
  }
  
  .terminal-service-description {
    color: var(--terminal-text);
    opacity: 0.7;
    font-size: 0.9rem;
    line-height: 1.5;
  }
  
  /* Tech Grid */
  .terminal-tech-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  @media (min-width: 640px) {
    .terminal-tech-grid {
      grid-template-columns: repeat(6, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .terminal-tech-grid {
      grid-template-columns: repeat(8, 1fr);
      gap: 0.75rem;
    }
  }
  
  .terminal-tech-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    animation: fadeInUp 0.5s ease-out forwards;
    animation-delay: var(--animation-delay, 0ms);
    opacity: 0;
    transform: translateY(10px);
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .terminal-tech-logo {
    position: relative;
    width: 3rem;
    height: 3rem;
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.5rem;
    color: var(--terminal-text);
    font-size: 1.5rem;
    border: 1px solid var(--terminal-border);
    transition: all 0.3s ease;
    overflow: hidden;
  }
  
  @media (min-width: 1024px) {
    .terminal-tech-logo {
      width: 2.75rem;
      height: 2.75rem;
      font-size: 1.25rem;
    }
  }
  
  .terminal-tech-logo-glow {
    position: absolute;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at center, var(--terminal-accent-alpha) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .terminal-tech-item:hover .terminal-tech-logo-glow {
    opacity: 0.3;
  }
  
  .terminal-tech-name {
    color: var(--terminal-text);
    font-size: 0.75rem;
    opacity: 0.8;
  }
  
  /* Skills Grid */
  .terminal-skills-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1rem;
  }
  
  @media (min-width: 640px) {
    .terminal-skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .terminal-skills-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 0.75rem;
    }
  }
  
  .terminal-skill-category {
    background-color: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--terminal-border);
    border-radius: 8px;
    padding: 1rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    animation: fadeIn 0.5s ease-out forwards;
    animation-delay: var(--animation-delay, 0ms);
    opacity: 0;
  }
  
  @media (max-width: 768px) {
    .terminal-skills-grid {
      gap: 0.75rem;
    }
    
    .terminal-skill-category {
      padding: 0.75rem;
    }
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  .terminal-skill-category-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--terminal-text);
    margin-bottom: 0.75rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--terminal-border);
    display: flex;
    align-items: center;
  }
  
  .terminal-skill-category-title:before {
    content: ">";
    color: var(--terminal-accent);
    margin-right: 0.5rem;
    font-family: monospace;
  }
  
  .terminal-skill-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .terminal-skill-item {
    color: var(--terminal-text);
    opacity: 0;
    font-size: 0.85rem;
    line-height: 1.5;
    margin-bottom: 0;
    display: inline-flex;
    align-items: center;
    font-family: monospace;
    background-color: rgba(255, 255, 255, 0.05);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    border: 1px solid rgba(48, 54, 61, 0.3);
    animation: fadeInRight 0.3s ease-out forwards;
    animation-delay: var(--animation-delay, 0ms);
    transform: translateX(-10px);
    transition: all 0.2s ease;
  }
  
  .terminal-skill-item:hover {
    background-color: rgba(229, 62, 62, 0.1);
    border-color: rgba(229, 62, 62, 0.3);
    transform: translateY(-2px);
  }
  
  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 0.8;
      transform: translateX(0);
    }
  }
  
  .terminal-skill-bullet {
    color: var(--terminal-accent);
    margin-right: 0.3rem;
    font-size: 0.8rem;
  }
  
  /* Projects Grid */
  .terminal-projects-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.5rem;
  }
  
