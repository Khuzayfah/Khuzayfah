<script>
  // Typewriter effect for terminal commands
  document.addEventListener('DOMContentLoaded', () => {
    // Detect if device is mobile
    const isMobile = window.matchMedia('(max-width: 768px)').matches;
    
    // Lazy loading implementation
    const lazyImages = document.querySelectorAll('img[loading="lazy"]');
    if ('loading' in HTMLImageElement.prototype) {
      // Browser supports native lazy loading
      lazyImages.forEach(img => {
        img.src = img.dataset.src;
      });
    } else {
      // Fallback for browsers that don't support lazy loading
      const lazyImageObserver = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const img = entry.target;
            img.src = img.dataset.src;
            observer.unobserve(img);
          }
        });
      });
      
      lazyImages.forEach(img => {
        lazyImageObserver.observe(img);
      });
    }
    
    // Prioritas rendering komponen yang terlihat
    const deferRender = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const section = entry.target;
          setTimeout(() => {
            section.style.visibility = 'visible';
            section.style.opacity = '1';
          }, 100);
          deferRender.unobserve(section);
        }
      });
    }, { rootMargin: '200px' });
    
    // Aplikasikan defer rendering ke bagian-bagian yang tidak terlihat awal
    document.querySelectorAll('.terminal-section').forEach((section, index) => {
      if (index > 1) { // Biarkan 2 section pertama untuk loading cepat
        section.style.visibility = 'hidden';
        section.style.opacity = '0';
        section.style.transition = 'opacity 0.3s ease';
        deferRender.observe(section);
      }
    });
    
    // Lazy loading observer for animation effects
    const animationObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          
          // Tambahkan class untuk special effect pada section saat muncul
          if (entry.target.classList.contains('terminal-section')) {
            entry.target.classList.add('section-revealed');
            
            // Tambahkan efek pada judul section
            const title = entry.target.querySelector('.terminal-section-title h2');
            if (title) {
              title.classList.add('title-revealed');
              setTimeout(() => {
                title.classList.add('title-glow');
              }, 500);
            }
          }
          
          animationObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1, rootMargin: '0px 0px 50px 0px' });
    
    // Apply to animation elements and sections
    document.querySelectorAll('.terminal-tech-item, .terminal-skill-category, .terminal-skill-item, .terminal-service-item, .terminal-section')
      .forEach(el => animationObserver.observe(el));
    
    // Typewriter effect with performance optimizations
    const commandObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const prompt = entry.target;
          const command = prompt.querySelector('.terminal-prompt-command');
          if (command) {
            const text = command.textContent || '';
            command.textContent = '';
            
            // Skip typewriter on mobile for better performance
            if (isMobile) {
              command.textContent = text;
              commandObserver.unobserve(prompt);
              return;
            }
            
            let i = 0;
            const typeWriter = () => {
              if (i < text.length) {
                command.textContent += text.charAt(i);
                i++;
                setTimeout(typeWriter, 50 + Math.random() * 50);
              }
            };
            
            setTimeout(typeWriter, 300);
            commandObserver.unobserve(prompt);
          }
        }
      });
    }, { threshold: 0.1 });
    
    document.querySelectorAll('.terminal-prompt, .terminal-prompt-mini').forEach(prompt => {
      commandObserver.observe(prompt);
    });
    
    // Smooth scrolling tanpa fixed header offset
    document.querySelectorAll('.terminal-nav-link').forEach(function(link) {
      link.addEventListener('click', function(this: HTMLAnchorElement, e: Event) {
        e.preventDefault();
        
        const targetId = this.getAttribute('href')?.substring(1);
        if (targetId) {
          const targetElement = document.getElementById(targetId);
          
          if (targetElement) {
            // Scroll biasa tanpa offset header karena sudah tidak sticky
            targetElement.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
            
            // Efek highlight pada section yang dituju
            setTimeout(() => {
              targetElement.classList.add('highlight-section');
              setTimeout(() => {
                targetElement.classList.remove('highlight-section');
              }, 1500);
            }, 500);
          }
        }
      });
    });
    
    // Tambahkan efek tulisan berkedip pada terminal prompt
    const cursorBlink = () => {
      const cursors = document.querySelectorAll('.terminal-prompt-cursor');
      cursors.forEach(cursor => {
        cursor.classList.toggle('blink');
      });
    };
    
    // Panggil fungsi cursorBlink setiap 500ms
    setInterval(cursorBlink, 500);
    
    // Tambahkan efek fade-in untuk seluruh halaman
    document.body.classList.add('page-loaded');
  });
</script>

